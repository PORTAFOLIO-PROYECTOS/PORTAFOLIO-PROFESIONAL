@model Usuario
<div class="options-container-fixed hidden-print">
    <div class="options">
        <div class="row">
            <div class="col-sm-12">
                <a href="~/Default/ExportaraPDF" class="btn btn-danger">
                    <i class="fa fa-file-pdf-o"></i> <span class="hidden-xs hidden-sm">Descargar en PDF</span>
                </a>
                <button class="btn btn-primary" onclick="window.print();">
                    <i class="fa fa-print"></i> <span class="hidden-xs hidden-sm">Imprimir</span>
                </button>
                <button class="btn btn-default" data-toggle="modal" data-target="#mContacto">
                    <i class="fa fa-envelope-o"></i> <span class="hidden-xs hidden-sm">Contactar</span>
                </button>
                @if (!string.IsNullOrWhiteSpace(Model.Facebook))
                {
                    <a href="@Model.Facebook" target="_blank" title="Facebook" class="btn btn-default"><i class="fa fa-facebook-official"></i></a>
                }
                @if (!string.IsNullOrWhiteSpace(Model.Twitter))
                {
                    <a href="@Model.Twitter" target="_blank" title="Twitter" class="btn btn-default"><i class="fa fa-twitter"></i></a>
                }
                @if (!string.IsNullOrWhiteSpace(Model.YouTube))
                {
                    <a href="@Model.YouTube" target="_blank" title="Youtube" class="btn btn-default"><i class="fa fa-youtube"></i></a>
                }
            </div>
        </div>
    </div>
</div>

@Html.Partial("~/views/shared/_Contacto.cshtml", new Portafolio.Web.ViewModels.ContactoViewModel())