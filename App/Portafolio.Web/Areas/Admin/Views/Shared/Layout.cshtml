
@{
    Layout = null;
    string controlador = ViewContext.RouteData.Values["Controller"].ToString().ToLower();
}

<!DOCTYPE html>

<html lang="es">
<head>
    <meta name="viewport" content="width=device-width" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" />
    <title>@ViewBag.Title | Portafolio V 1.0.0</title>
    <link href="~/Areas/Admin/Assets/css/admin-style.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Assets/css/font-awesome.min.css" rel="stylesheet" />
</head>
<body>
    @if (controlador != "login")
    {
        <nav class="navbar navbar-default">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#menu" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="#" class="navbar-brand">Portafolio V 1.0.0</a>
                </div>
                <div class="collapsed navbar-collapse" id="menu">
                    <ul class="navbar navbar-nav">
                        <li><a href="~/admin/usuario">Acerca de mí</a></li>
                        <li><a href="~/admin/experiencia?tipo=1">Trabajos</a></li>
                        <li><a href="~/admin/experiencia?tipo=2">Estudios</a></li>
                        <li><a href="~/admin/habilidades">Habilidades</a></li>
                        <li><a href="~/admin/testimonios">Testimonios</a></li>
                    </ul>
                    <ul class="navbar navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false" aria-haspopup="true">
                                <img src="~/Assets/images/perfil.png" alt="Alternate Text" />
                                <b>Hola</b>, Hugo <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="~/">Ver Portafolio</a></li>
                                <li><a href="~/admin/login/logout">Finalizar sesión</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    }

    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                @RenderBody()
            </div>
        </div>

        <div class="well text-center">
            2018 - Proyecto desarrollado por <a target="_blank" href="https://hugoroca.github.io">Hugo Roca</a>
        </div>
    </div>

    <script src="~/Areas/Admin/Assets/js/jquery.min.js"></script>
    <script src="~/Areas/Admin/Assets/js/popper.min.js"></script>
    <script src="~/Areas/Admin/Assets/js/bootstrap.min.js"></script>
    <script src="~/Areas/Admin/Assets/js/ini.js"></script>
    <script src="~/Areas/Admin/Assets/js/jquery.anexgrid.min.js"></script>
    <script src="~/Areas/Admin/Assets/js/jquery.validate.min.js"></script>
    <script src="~/Areas/Admin/Assets/js/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
