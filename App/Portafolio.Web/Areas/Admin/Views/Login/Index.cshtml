
@{
    ViewBag.Title = "Autenticanión";
}

<div id="login">
    <h1 class="text-center">Autenticación en el sistema</h1>

    <form>
        <div class="form-group">
            <label for="">Email</label>
            <input type="text" name="Email" class="form-control" placeholder="Ingrese su correo electrónico" />
        </div>
        <div class="form-group">
            <label for="">Contraseña</label>
            <input type="password" name="Password" class="form-control" placeholder="Ingrese su password" />
        </div>
        <button type="submit" class="btn btn-primary">Ingresar</button>
    </form>
</div>
